<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/loc_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tingche wei"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"

                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/detail"
                android:text="备注"
                android:layout_alignBottom="@+id/loc_name"
                android:layout_toRightOf="@+id/loc_name"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="#2346b9"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/map_name"
                android:layout_below="@id/loc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="双安大厦"
                android:textSize="14dp"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/groupid"
                android:text="1楼"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/map_name"
                android:layout_alignBottom="@+id/map_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time"
                android:text="2018/4/10/18:31"
                android:textSize="12dp"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/map_name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>